{
  "name": "royal-card-game",
  "private": true,
  "version": "1.0.0",
  "description": "A multiplayer trick-taking card game with customizable rules, card back designs, and AI opponents. Built with React and Vite.",
  "author": "Royal Card Game Team",
  "license": "MIT",
  "type": "module",
  "keywords": [
    "card-game",
    "react",
    "vite",
    "multiplayer",
    "trick-taking",
    "spades",
    "game"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ethara-Ai/royal-card-game"
  },
  "bugs": {
    "url": "https://github.com/Ethara-Ai/royal-card-game/issues"
  },
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{js,jsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,css,json}\"",
    "clean": "rm -rf dist node_modules/.vite coverage",
    "prebuild": "npm run lint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:verbose": "vitest run --reporter=verbose"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "react": "^19.2.3",
    "react-colorful": "^5.6.1",
    "react-confetti": "^6.4.0",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tailwindcss/vite": "^4.1.18",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.0.0",
    "jsdom": "^27.4.0",
    "prettier": "^3.7.4",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.18",
    "vite": "^7.3.1",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
