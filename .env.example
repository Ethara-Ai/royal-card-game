# =============================================================================
# ROYAL CARD GAME - Environment Variables Template
# =============================================================================
# Copy this file to .env.local for development or .env.production for production
# NEVER commit .env files with real values to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
# Application environment: development | staging | production
VITE_APP_ENV=production

# Application name (used in titles, meta tags, etc.)
VITE_APP_NAME=Royal Card Game

# Application version (can be auto-injected during build)
VITE_APP_VERSION=1.0.0

# Base URL for the application (no trailing slash)
VITE_APP_URL=https://your-domain.com

# Public path for assets (useful for CDN deployment)
VITE_PUBLIC_PATH=/

# -----------------------------------------------------------------------------
# API CONFIGURATION
# -----------------------------------------------------------------------------
# Backend API base URL
VITE_API_BASE_URL=https://api.your-domain.com

# API version
VITE_API_VERSION=v1

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# -----------------------------------------------------------------------------
# WEBSOCKET CONFIGURATION (for multiplayer features)
# -----------------------------------------------------------------------------
# WebSocket server URL for real-time game communication
VITE_WS_URL=wss://ws.your-domain.com

# WebSocket reconnection attempts
VITE_WS_RECONNECT_ATTEMPTS=5

# WebSocket reconnection delay in milliseconds
VITE_WS_RECONNECT_DELAY=3000

# -----------------------------------------------------------------------------
# AUTHENTICATION
# -----------------------------------------------------------------------------
# Auth provider: local | oauth | firebase
VITE_AUTH_PROVIDER=local

# OAuth/Social login client IDs (if using OAuth)
VITE_GOOGLE_CLIENT_ID=
VITE_FACEBOOK_APP_ID=
VITE_DISCORD_CLIENT_ID=

# JWT token storage key
VITE_AUTH_TOKEN_KEY=royal_card_game_token

# Session timeout in minutes
VITE_SESSION_TIMEOUT=60

# -----------------------------------------------------------------------------
# FIREBASE CONFIGURATION (if using Firebase)
# -----------------------------------------------------------------------------
VITE_FIREBASE_API_KEY=
VITE_FIREBASE_AUTH_DOMAIN=
VITE_FIREBASE_PROJECT_ID=
VITE_FIREBASE_STORAGE_BUCKET=
VITE_FIREBASE_MESSAGING_SENDER_ID=
VITE_FIREBASE_APP_ID=
VITE_FIREBASE_MEASUREMENT_ID=

# -----------------------------------------------------------------------------
# ANALYTICS & MONITORING
# -----------------------------------------------------------------------------
# Google Analytics tracking ID
VITE_GA_TRACKING_ID=

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# Enable/disable analytics in production
VITE_ENABLE_ANALYTICS=true

# LogRocket app ID (for session replay)
VITE_LOGROCKET_APP_ID=

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Enable multiplayer mode
VITE_FEATURE_MULTIPLAYER=true

# Enable AI opponents
VITE_FEATURE_AI_OPPONENTS=true

# Enable custom card backs
VITE_FEATURE_CUSTOM_CARD_BACKS=true

# Enable sound effects
VITE_FEATURE_SOUND_EFFECTS=true

# Enable achievements system
VITE_FEATURE_ACHIEVEMENTS=true

# Enable leaderboards
VITE_FEATURE_LEADERBOARDS=true

# Maintenance mode (shows maintenance page when true)
VITE_MAINTENANCE_MODE=false

# -----------------------------------------------------------------------------
# GAME CONFIGURATION
# -----------------------------------------------------------------------------
# Maximum players per game
VITE_MAX_PLAYERS=4

# Default AI difficulty: easy | medium | hard
VITE_DEFAULT_AI_DIFFICULTY=medium

# Game timeout in minutes (for inactive games)
VITE_GAME_TIMEOUT=30

# -----------------------------------------------------------------------------
# CDN & ASSETS
# -----------------------------------------------------------------------------
# CDN URL for static assets (images, sounds, etc.)
VITE_CDN_URL=

# Image optimization service URL
VITE_IMAGE_SERVICE_URL=

# -----------------------------------------------------------------------------
# THIRD-PARTY INTEGRATIONS
# -----------------------------------------------------------------------------
# Stripe publishable key (for payments/premium features)
VITE_STRIPE_PUBLISHABLE_KEY=

# reCAPTCHA site key (for bot protection)
VITE_RECAPTCHA_SITE_KEY=

# -----------------------------------------------------------------------------
# DEVELOPMENT & DEBUG
# -----------------------------------------------------------------------------
# Enable debug mode (additional logging)
VITE_DEBUG_MODE=false

# Enable React DevTools in production (not recommended)
VITE_ENABLE_DEVTOOLS=false

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Mock API responses (for testing without backend)
VITE_MOCK_API=false
